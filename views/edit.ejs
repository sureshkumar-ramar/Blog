<%- include("./partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="blog[name]">
                Title
            
            </label>
            <input type="text" name="blog[title]" id="name" placeholder="blog Title" value="<%= blog.title %>">
        </div>
        
        <div class="field">
            <label for="blog[image]">
                Image
            </label>
        <input type="text" name="blog[image]" id="image" placeholder="Image URL" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="blog[body]">
                Blog Content
            </label>
            <textarea name="blog[body]" id="blog[body]" cols="30" rows="10" required><%= blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" value="Update Post">
    </form>
</div>

<%- include("./partials/footer") %>